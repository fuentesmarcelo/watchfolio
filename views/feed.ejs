<%- include('partials/header') -%>
<%- include('partials/navbar') -%>  <!-- Add this line -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2 class="text-center mb-4">Latest Posts</h2>
      <div class="row g-4">
        <% for (var i = 0; i < posts.length; i++) { %>
          <div class="col-md-4">
            <div class="card shadow-sm border-0">
              <a href="/post/<%= posts[i]._id %>">
                <img class="card-img-top" src="<%= posts[i].image %>" alt="Post Image" style="height: 250px; object-fit: cover;">
              </a>
              <div class="card-body">
                <h5 class="card-title"><%= posts[i].title %></h5>
                <p class="card-text text-muted"><%= posts[i].text %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="text-secondary">❤️ <%= posts[i].likes %> Likes</span>
                  <% if (posts[i].user.toString() === user._id.toString()) { %>
                    <a href="/post/<%= posts[i]._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>
